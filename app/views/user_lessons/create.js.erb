$('#<%= "list-#{@lesson.id}-list" %> .user-count').html(
  "<span class='badge badge-danger badge-pill mx-1'><i class='fas fa-check'></i></span><span class='badge badge-primary badge-pill'><%= @lesson.user_lessons.count %></span>"
);

$('#button-<%= @lesson.id %>').html(
  "<button type='button' class='btn btn-primary btn-sm float-right' disabled>Joined</button>"
);

$('#button-<%= next_lesson(@lesson).id %>').html(
  "<%= escape_javascript(button_to 'Join', user_lessons_path(lesson_id: next_lesson(@lesson).id), class: 'btn btn-primary btn-sm float-right', remote: true) %>"
);
