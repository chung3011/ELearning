<a class="list-group-item list-group-item-action <%= first_lesson?(lesson) ? 'active' : '' %>" id="list-<%= lesson.id %>-list" data-toggle="list" href="#list-<%= lesson.id %>" role="tab" aria-controls="<%= lesson.id %>">
  <div class="list-group-item d-flex justify-content-between align-items-center">
    <span class="text-black"><%= lesson.name %></span>
    <div class="user-count">
      <% if lesson_registered?(lesson) %>
        <span class="badge badge-danger badge-pill mx-1"><i class="fas fa-check"></i></span>
      <% end %>
      <span class="badge badge-primary badge-pill"><%= lesson.user_lessons.count %></span>
    </div>
  </div>
</a>
